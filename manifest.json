{
  "manifest_version": 3,
  "name": "OpenFront Shortcuts",
  "version": "1.0",
  "description": "Assign shortcut to open front game.",
  "author": "Mohamed Moawia (Shalaga44) <shalaga44@e.email>",
  "permissions": [
    "scripting",
    "activeTab",
    "commands"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://openfront.io/*", "http://localhost:9000/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "select_atom_bomb": {
      "suggested_key": {
        "default": "Alt+B"
      },
      "description": "Atom Bomb"
    },
    "select_h_bomb": {
      "suggested_key": {
        "default": "Alt+H"
      },
      "description": "Hydrogen Bomb"
    },
    "select_warship": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Warship"
    },
    "select_silo": {
      "suggested_key": {
        "default": "Alt+I"
      },
      "description": "Silo"
    }
  },
  "action": {
    "default_title": "OpenFront Selected Shortcuts"
  }
}